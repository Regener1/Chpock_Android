<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/roundrect_main">

    <ImageView
        android:id="@+id/fragmentScreenSlidePage_ImageView_SpeechBubble"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="13dp"
        android:scaleType="fitXY"
        android:src="@mipmap/speech_bubble"/>

    <ImageView
        android:id="@+id/fragmentScreenSlidePage_ImageView_ImgShakespeare"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:src="@mipmap/img_shakespeare"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/fragmentScreenSlidePage_ImageView_SpeechBubble"
        android:layout_alignStart="@+id/fragmentScreenSlidePage_ImageView_SpeechBubble"
        android:layout_below="@+id/fragmentScreenSlidePage_ImageView_SpeechBubble"
        android:layout_alignRight="@+id/fragmentScreenSlidePage_ImageView_SpeechBubble"
        android:layout_alignEnd="@+id/fragmentScreenSlidePage_ImageView_SpeechBubble"/>

    <com.example.user.chpok.CustomTextView
        android:id="@+id/fragmentScreenSlidePage_TextView"
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:layout_alignEnd="@+id/fragmentScreenSlidePage_ImageView_SpeechBubble"
        android:layout_alignLeft="@+id/fragmentScreenSlidePage_ImageView_SpeechBubble"
        android:layout_alignRight="@+id/fragmentScreenSlidePage_ImageView_SpeechBubble"
        android:layout_alignTop="@+id/fragmentScreenSlidePage_ImageView_SpeechBubble"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:text="Любовь моя! Едваль сегодня, смогу я отказать
                        друзьям своим. Мы собрались пивка попить.
                        Вернусь не ранее захода."
        android:textSize="26sp"
        android:textColor="@color/colorBlack"
        app:font="FiveMinutes.ttf"/>

</RelativeLayout>